# Claude Development Orchestrator Configuration
# Copy this to .env and fill in your values

# Required: GitHub authentication
# Either set GITHUB_TOKEN or authenticate with `gh auth login`
GITHUB_TOKEN=ghp_your_token_here

# Required: Repository to watch (format: owner/repo)
GITHUB_REPO=harry-m/dashai

# Optional: Polling interval in seconds (default: 60)
POLL_INTERVAL=60

# Optional: Base directory for git worktrees (default: ./worktrees)
WORKTREE_BASE=./worktrees

# Optional: Label that triggers implementation (default: ready)
READY_LABEL=ready

# Optional: Maximum concurrent Claude processes (default: 2)
MAX_CONCURRENT=2

# Optional: State file location (default: ./.orchestrator-state.json)
STATE_FILE=./.orchestrator-state.json

# Optional: Maximum turns for Claude (default: 50)
MAX_TURNS=50

# Optional: Enable auto-merge when /merge comment is found (default: true)
AUTO_MERGE_ENABLED=true

# Optional: Comment trigger for merge (default: /merge)
MERGE_COMMENT_TRIGGER=/merge

# Optional: Commands to run before merge (JSON array)
# All commands must pass for merge to proceed
PRE_MERGE_COMMANDS=["pytest", "ruff check .", "bandit -r ."]
